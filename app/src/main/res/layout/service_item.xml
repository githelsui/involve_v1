<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardElevation="5dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="5dp"
    android:layout_height="100dp">

    <!--BACKGROUND LAYOUT-->
    <RelativeLayout
        android:id="@+id/backgroundprog_layout"
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        tools:ignore="InvalidId">

        <TextView
            android:id="@+id/deletelbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="DELETE"
            android:padding="4dp"
            android:textColor="@color/greyhex"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_toLeftOf="@id/delete_img"
            android:fontFamily="@font/myriadpro_light" />

        <ImageView
            android:id="@+id/delete_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_delete"
            android:layout_marginTop="0dp"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <!--FOREGROUND LAYOUT-->
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:background="@android:color/background_dark"
        android:visibility="visible"
        android:layout_height="match_parent"
        tools:ignore="InvalidId">

        <TextView
            android:id="@+id/text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:text="@string/test_text_1"
            android:textColor="@android:color/white"
            android:layout_alignParentLeft="true"
            android:padding="4dp"
            android:textSize="25sp"
            android:fontFamily="@font/myriadpro_light" />

        <TextView
            android:id="@+id/text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/text_view1"
            android:fontFamily="@font/myriadpro_light"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:text="@string/test_text_2"/>

        <TextView
            android:id="@+id/hourslbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerVertical="true"
            android:text="hours"
            android:padding="4dp"
            android:textStyle="italic"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:layout_toLeftOf="@id/arrow_img"
            android:fontFamily="@font/myriadpro_light" />

        <ImageView
            android:id="@+id/arrow_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>