<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintCircleRadius="20dp"
    android:padding="16dp">

       <TextView
        android:id="@+id/servicename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        android:padding="4dp"
        android:fontFamily="@font/myriadpro_light"
        android:text="@string/adddateservice"/>

    <EditText
        android:importantForAutofill="no"
        android:id="@+id/date_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/servicename"
        android:inputType="date"
        android:padding="15dp"
        android:paddingTop="4dp"
        android:textSize="20sp"
        android:fontFamily="@font/myriadpro_light"
        android:hint="Date Started               (Month / Day / Year)"/>

    <EditText
        android:importantForAutofill="no"
        android:id="@+id/date_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:inputType="date"
        android:textSize="20sp"
        android:fontFamily="@font/myriadpro_light"
        android:hint="Date of Completion   (Month / Day / Year)"
        android:layout_below="@id/date_started"/>

    <EditText
        android:importantForAutofill="no"
        android:id="@+id/duties_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:inputType="textMultiLine"
        android:textSize="20sp"
        android:fontFamily="@font/myriadpro_light"
        android:hint="Duties and Additional Information"
        android:layout_below="@id/date_end"/>

    <EditText
        android:id="@+id/ind_hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:hint="Total Hours"
        android:layout_below="@id/duties_info"/>

    </RelativeLayout>
