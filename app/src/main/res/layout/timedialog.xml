<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintCircleRadius="20dp"
    android:scrollbars="vertical"
    android:fadeScrollbars="true"
    android:padding="16dp">

    <TextView
        android:id="@+id/servicename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="4dp"
        android:layout_below="@id/servicename"
        android:fontFamily="@font/myriadpro_light"
        android:text="mmm dd, yyyy - mmm dd, yyyy"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/servicename"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/timestart_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:textSize="25sp"
            android:fontFamily="@font/myriadpro_light"
            android:layout_centerHorizontal="true"
            android:text="Start Time"/>


        <TimePicker
            android:id="@+id/timestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/timestart_lbl"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_below="@id/servicename"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/time_endlbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:textSize="25sp"
            android:fontFamily="@font/myriadpro_light"
            android:layout_centerHorizontal="true"
            android:text="End Time"/>


        <TimePicker
            android:id="@+id/timeend"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/time_endlbl"/>

        <TextView
            android:id="@+id/startinfo"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeend"
            android:paddingTop="18dp"
            android:textSize="20sp"
            android:fontFamily="@font/myriadpro_light"
            android:layout_centerHorizontal="true"
            android:text="Start Time at hh:mm"/>

    </RelativeLayout>

</RelativeLayout>
